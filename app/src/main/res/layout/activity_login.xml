<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#2c2954"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.LoginActivity">



        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imlogin"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:background="@drawable/logoaccueil"
                android:layout_alignParentTop="true" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:digits="1234567890"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:backgroundTint="#fff"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textSize="12pt"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="nouvel utilisateur "
                    android:layout_marginRight="10dip"
                    android:textColor="@color/cardview_light_background"
                    android:id="@+id/btNewUser"
                    android:layout_centerVertical="true"
                    android:textSize="8pt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:textSize="12pt"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:backgroundTint="#fff"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="oubliÃ© ? "
                    android:layout_marginRight="10dip"
                    android:textColor="@color/cardview_light_background"
                    android:id="@+id/txPasseOublie"
                    android:textSize="8pt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/btconnecttel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_sign_in"
                        android:textSize="11.33pt"
                        android:layout_margin="10dip"
                        android:background="@android:color/transparent"
                        android:textColor="@color/text_color"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dip"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dip"
                            android:id="@+id/imFacebook"
                            android:src="@drawable/logofacebook"
                            android:layout_alignTop="@+id/btconnexion"
                            android:layout_toLeftOf="@+id/btconnexion"
                            android:layout_alignParentBottom="true" />

                        <TextView
                            android:id="@+id/btconnexion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="connexion"
                            android:textSize="11.33pt"
                            android:background="@android:color/transparent"
                            android:textColor="@color/text_color"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

</LinearLayout>
