<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.NewProfil"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#2c2954"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/headereaser"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/createuser_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="20dip"
        android:id="@+id/createuser_form"
        android:layout_height="match_parent">



<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edtPseudo"
        android:inputType="text"
        android:textSize="11.33pt"
        android:backgroundTint="#2c2954"
        android:textColor="#2c2954"
        android:textColorHint="#2c2954"
        android:layout_weight="1"
        android:hint="prénom" />
</LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/edtPhone"
                android:digits="1234567890"
                android:backgroundTint="#2c2954"
                android:textColor="#2c2954"
                android:textSize="11.33pt"
                android:textColorHint="#2c2954"
                android:maxLength="10"
                android:inputType="phone"
                android:layout_weight="1"
                android:hint="téléphone" />
        </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:backgroundTint="#2c2954"
        android:textColor="#2c2954"
        android:textColorHint="#2c2954"
        android:textSize="11.33pt"
        android:id="@+id/edtPass"
        android:layout_weight="1"
        android:hint="mot de passe" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edtAge"
        android:backgroundTint="#2c2954"
        android:textColor="#2c2954"
        android:textColorHint="#2c2954"
        android:digits="1234567890"
        android:textSize="11.33pt"
        android:maxLength="10"
        android:inputType="number"
        android:layout_weight="1"
        android:hint="âge" />
</LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">





            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:id="@+id/viewMale"
                android:gravity="center_vertical">


                <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/radioMale"
                    android:background="#d2d2db"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="homo"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/homme"
                    android:id="@+id/imrdMale"
                    android:textColor="#3a375f"
                   />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/viewFemale"
                android:gravity="center_vertical">


                <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/radioFemale"
                    android:background="#d2d2db"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:id="@+id/imrdFemale"
                    android:src="@drawable/femme"
                    android:textColor="#3a375f"
                    />

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dip"
            android:layout_height="wrap_content"
            android:id="@+id/viewnewHomo"
            android:gravity="center_vertical|center_horizontal">





            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/imnewHomo"
                    android:background="#d2d2db"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="11.33pt"
                    android:text="homo"
                    android:textColor="#3a375f"
                    android:id="@+id/txnewHomo"
                    android:layout_weight="1.3" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/viewnewHete"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/imnewhete"
                    android:background="#d2d2db"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="11.33pt"
                    android:text="hétéro"
                    android:id="@+id/txnewhetero"
                    android:textColor="#3a375f"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/viewnewBi"
                android:gravity="center_vertical">


                <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/imnewBi"
                    android:background="#d2d2db"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="11.33pt"
                    android:textColor="#3a375f"
                    android:text="bi"
                    android:id="@+id/txnewBi"
                    android:layout_weight="1" />

            </LinearLayout>




        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_gravity="center_horizontal">

            <Button
        android:id="@+id/btValidCompte"
                style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in"
        android:textColor="#ffffff"
        android:background="#2c2954"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2c2954"
                android:textSize="5pt"
                android:layout_marginTop="10dip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="En cliquant sur valider vous acceptez les conditions générales d&apos;utilisation et la politique de confidentialité."
                android:id="@+id/txCondition"
                android:layout_alignParentRight="true"
                android:linksClickable="false"
                android:longClickable="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
