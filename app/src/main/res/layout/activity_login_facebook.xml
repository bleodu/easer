<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.LoginFacebook">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="20dip"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txEnregistrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enregistrer"
            android:textColor="#2c2954"
            android:textSize="12pt" />



        <ImageView
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/ligne" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/viewhomo"
                    android:gravity="center_vertical">


                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/imHomo"
                        android:background="#d2d2db"
                         />

                    <TextView
                        android:id="@+id/txHomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1.3"
                        android:text="@string/homo"
                        android:textColor="#3a375f"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/viewbi"
                    android:gravity="center_vertical|center_horizontal">


                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/imBi"
                        android:background="#d2d2db"
                        />

                    <TextView
                        android:id="@+id/txBi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/bi"
                        android:textColor="#3a375f"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/viewhete"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical">


                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/imhete"
                        android:background="#d2d2db"/>

                    <TextView
                        android:id="@+id/txhetero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="right"
                        android:text="@string/hetero"
                        android:textColor="#3a375f"

                        android:textSize="25sp" />

                </LinearLayout>


        </LinearLayout>

       <!-- <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="600px"
            android:layout_height="400px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            facebook:com_facebook_login_text=" avec Facebook"
            facebook:com_facebook_logout_text=" avec Facebook"
            android:layout_marginBottom="30dp" />-->

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#3a579d"
            android:id="@+id/btconnextfacebook"
            android:src="@drawable/boutonfacebook"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#2c2954"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/headereaser" />


    </LinearLayout>


</LinearLayout>
