<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ajout_amis"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.AjoutAmis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2c2954"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            app:srcCompat="@drawable/bouteilleblanche" />

        <TextView
            android:id="@+id/txHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajout"
            android:textColor="#fff"
            android:textSize="40dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9" />

        <ImageView
            android:id="@+id/imFlecheGaucheListAmis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:src="@drawable/fleche" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txnewAmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="@string/ajoutami"
            android:textColor="#2c2954"
            android:textSize="11.33pt" />

        <ImageView
            android:id="@+id/imLignePLutot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ligne" />

        <TextView
            android:id="@+id/txAPartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="@string/apartir"
            android:textColor="#2c2954"
            android:textSize="11.33pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/RelLayRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="#2c2954"
                android:padding="5dip">

                <TextView
                    android:id="@+id/txRep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/montel"
                    android:textColor="#fff"
                    android:textColorLink="#fff"
                    android:textSize="6pt" />

                <ImageView
                    android:id="@+id/imloupereprech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    app:srcCompat="@drawable/loupe" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelLayPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="#2c2954"
                android:padding="5dip">

                <TextView
                    android:id="@+id/txTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="textPersonName"
                    android:text="@string/ajouttel"
                    android:textColor="#fff"
                    android:textColorLink="#fff"
                    android:textSize="6pt" />

                <ImageView
                    android:id="@+id/imloupetelrech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    app:srcCompat="@drawable/loupe" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
