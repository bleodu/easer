<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list_amis_ajout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.ListAmisAjout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2c2954"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            app:srcCompat="@drawable/bouteilleblanche" />

        <TextView
            android:id="@+id/txHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajout"
            android:textColor="#fff"
            android:textSize="43dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9" />

        <ImageView
            android:id="@+id/imFlecheGaucheListAmis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:src="@drawable/fleche" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dip"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="#2c2954"
                android:id="@+id/rlvMonRep"
                android:layout_marginRight="2dip"
                android:padding="5dip">

                <TextView
                    android:id="@+id/txRep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/rep"
                    android:textColor="#fff"
                    android:textColorLink="#fff"
                    android:textSize="6pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/loupe"
                    android:id="@+id/imloupereprech"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp" />
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:id="@+id/rlvTelPhone"
            android:background="#2c2954"
                android:layout_marginLeft="2dip"
                android:padding="5dip">

                <TextView
                    android:id="@+id/txTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="textPersonName"
                    android:text="@string/ajouttel"
                    android:textColor="#fff"
                    android:textColorLink="#fff"
                    android:textSize="6pt" />

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/loupe"
                    android:id="@+id/imloupetelrech"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="6dp" />
            </RelativeLayout>


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:id="@+id/rlvRechTel"
            android:background="#807f98"
            >

            <EditText
                android:id="@+id/edttelrech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#fff"
                android:digits="1234567890"
                android:hint="@string/ajouttel"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textColorLink="#fff"
                android:textSize="8pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/loupe"
                android:id="@+id/imloupetel"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lstamis"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>
