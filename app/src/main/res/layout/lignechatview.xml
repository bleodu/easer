<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <com.kenfestoche.smartcoder.kenfestoche.model.SquareImageView
            android:id="@+id/imPhotoChat"
            android:layout_width="40dp"
            android:src="@drawable/ajoutphoto"
            android:layout_height="40dp"

            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="coucou c'est moi
                    je suis"
                    android:layout_width="match_parent"
                    android:textSize="7.5pt"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="#aa9f9e"
                    android:textColor="#fff"
                    android:id="@+id/txTexteChat"
                    android:layout_weight="1" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pointegrisemess"
                android:id="@+id/imPointeGrise"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dip"
                android:layout_alignLeft="@+id/txTexteChat"
                android:layout_alignStart="@+id/txTexteChat" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txDate"
                android:textColor="#bfbfbf"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:textSize="5pt"
                android:gravity="bottom"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
