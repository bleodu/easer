<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2954"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.MainActivity">

    <ImageView
        android:id="@+id/imaccueil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:background="@drawable/easernewlogin" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dip"
        android:gravity="center_horizontal|top">


        <RelativeLayout
            android:layout_height="40dip"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"
            android:background="#3a579d"
            android:id="@+id/btimFacebook"
            android:layout_marginRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:text="@string/main_fb"
                android:textColor="#fff"
                android:textSize="25dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/txFacebook" />



            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/txFacebook"
                android:layout_toStartOf="@+id/txFacebook" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imbarreou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/barreou" />


        <TextView
            android:id="@+id/BtimTel"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#fff"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/main_tel"
            android:textColor="#2c2954"
            android:textSize="25dip" />


    </LinearLayout>
</RelativeLayout>
