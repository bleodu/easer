<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.VerifSmsCode"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#2c2954"
        android:layout_marginBottom="30dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/headereaser"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.33pt"
            android:textColor="#2c2954"
            android:text="saisir le code reÃ§u par sms"
            android:id="@+id/txSaisieCode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textColor="#2c2954"
            android:text="___________________________________________________________________"
            android:textSize="8pt" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edtCodeSms"
            android:digits="1234567890"
            android:layout_marginTop="30dip"
            android:layout_marginRight="5dip"
            android:maxLength="5"
            android:background="#2c2954"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="phone"
            android:textSize="11.33pt"
            android:padding="10dip"
            android:text=""
            android:hint="_ _ _ _ _"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:layout_gravity="center_horizontal">

            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/btValidSmsCode"
                android:textSize="18dip"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_sign_in"
                android:textColor="#ffffff"
                android:background="#2c2954"
                android:layout_gravity="center_horizontal"
                android:layout_above="@+id/btSendNewSms"
                android:layout_alignParentRight="true"
                />

            <TextView
                style="?android:textAppearanceSmall"
                android:id="@+id/btSendNewSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renvoiecode"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dip"
                android:textColor="#2c2954"
                android:layout_alignParentRight="true"
                android:textSize="8pt"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
