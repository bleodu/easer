<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kenfestoche.smartcoder.kenfestoche.VerifSmsCode"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextZEN"
        android:text="Veuillez saisir le code reÃ§u par SMS :"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edtCodeSms"
        android:digits="1234567890"
        android:maxLength="5"
        android:inputType="phone"
        android:layout_gravity="bottom"
        />

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/btValidSmsCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/btSendNewSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Renvoyer le code"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
